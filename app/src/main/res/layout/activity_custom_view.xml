<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hencoder.CustomViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.lihao.customview.hencoder.CustomView1
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="#000000"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="btnTest"
            android:background="@drawable/btn_custom_material"
            android:text="bg实现圆角+水波纹"
            android:textColor="@color/white"
            android:layout_margin="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:foreground="@drawable/ripple_default"
            android:layout_height="48dp"
            android:background="@drawable/bg_red_radius_99"
            android:onClick="btnTest"
            android:textColor="@color/white"
            android:text="bg+feg实现圆角+水波纹圆角"
            android:layout_margin="20dp"/>

        <Button
            android:layout_width="48dp"
            android:foreground="@drawable/ripple_radius"
            android:layout_height="48dp"
            android:background="@drawable/bg_red_circle"
            android:onClick="btnTest"
            android:textColor="@color/white"
            android:text="圆"
            android:layout_margin="20dp"/>

    </LinearLayout>

</ScrollView>